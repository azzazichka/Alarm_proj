<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/back_itm_alrm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray">

<!--        <com.google.android.material.imageview.ShapeableImageView-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:id="@+id/listImage"-->
<!--            android:src="@drawable/baseline_add_alarm_24"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            />-->

        <!--            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"-->

        <TextView
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:id="@+id/time_of_alarm"
            android:text="12:00"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:layout_marginStart="10dp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/ring_in"
            android:text="ring in"
            android:textSize="20sp"
            android:layout_toEndOf="@id/time_of_alarm"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/delete_mode_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/delete_icon"
            android:layout_toEndOf="@id/ring_in"

            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>